  <definitions>
    <definition id="oval:oval.mitre.org.sql511:def:1" version="1" class="compliance">
      <metadata>
        <title>MySQL security check</title>
        <description>Check if a MySQL database is secure.  Uses guidelines from http://benchmarks.cisecurity.org/tools2/mysql/CIS_MySQL_Benchmark_v1.0.2.pdf</description>
      </metadata>
      <criteria>
        <criterion test_ref="oval:oval.mitre.org.sql511:tst:1" comment="4.1: Test whether the mysql version is >= 4.1"/>
      </criteria> 
    </definition>
    <definition id="oval:oval.mitre.org.sql511:def:2" version="1" class="compliance">
      <metadata>
        <title>MySQL security check</title>
        <description>Check if a MySQL database is secure.  Uses guidelines from http://benchmarks.cisecurity.org/tools2/mysql/CIS_MySQL_Benchmark_v1.0.2.pdf</description>
      </metadata>
      <criteria>
        <criterion test_ref="oval:oval.mitre.org.sql511:tst:2" comment="4.4: Make sure test database does not exist"/>
      </criteria> 
    </definition>
    <definition id="oval:oval.mitre.org.sql511:def:3" version="1" class="compliance">
      <metadata>
        <title>MySQL security check</title>
        <description>Check if a MySQL database is secure.  Uses guidelines from http://benchmarks.cisecurity.org/tools2/mysql/CIS_MySQL_Benchmark_v1.0.2.pdf</description>
      </metadata>
      <criteria>
        <criterion test_ref="oval:oval.mitre.org.sql511:tst:3" comment="4.5: Make sure there is no 'root' account"/>
      </criteria> 
    </definition>
    <definition id="oval:oval.mitre.org.sql511:def:4" version="1" class="compliance">
      <metadata>
        <title>MySQL security check</title>
        <description>Check if a MySQL database is secure.  Uses guidelines from http://benchmarks.cisecurity.org/tools2/mysql/CIS_MySQL_Benchmark_v1.0.2.pdf</description>
      </metadata>
      <criteria>
        <criterion test_ref="oval:oval.mitre.org.sql511:tst:4" comment="4.7: All password hashes should be 41 bytes or longer"/>
      </criteria> 
    </definition>
    <definition id="oval:oval.mitre.org.sql511:def:5" version="1" class="compliance">
      <metadata>
        <title>MySQL security check</title>
        <description>Check if a MySQL database is secure.  Uses guidelines from http://benchmarks.cisecurity.org/tools2/mysql/CIS_MySQL_Benchmark_v1.0.2.pdf</description>
      </metadata>
      <criteria>
        <criterion test_ref="oval:oval.mitre.org.sql511:tst:5" comment="4.9: User hosts should not be wildcards"/>
      </criteria> 
    </definition>
  </definitions>
  <tests>
    <ind-def:sql511_test id="oval:oval.mitre.org.sql511:tst:1" version="1" check="all" comment="4.1: Test whether the mysql version is >= 4.1">
      <ind-def:object object_ref="oval:oval.mitre.org.sql511:obj:1"/>
      <ind-def:state state_ref="oval:oval.mitre.org.sql511:ste:1"/>
    </ind-def:sql511_test>
    <ind-def:sql511_test id="oval:oval.mitre.org.sql511:tst:2" version="1" check="all" check_existence="none_exist" comment="4.4: Make sure test database does not exist">
      <ind-def:object object_ref="oval:oval.mitre.org.sql511:obj:2"/>
    </ind-def:sql511_test>
    <ind-def:sql511_test id="oval:oval.mitre.org.sql511:tst:3" version="1" check="all" check_existence="none_exist" comment="4.5: Make sure there is no 'root' account">
      <ind-def:object object_ref="oval:oval.mitre.org.sql511:obj:3"/>
    </ind-def:sql511_test>
    <ind-def:sql511_test id="oval:oval.mitre.org.sql511:tst:4" version="1" check="all" check_existence="none_exist" comment="4.7: All password hashes should be 41 bytes or longer">
      <ind-def:object object_ref="oval:oval.mitre.org.sql511:obj:4"/>
    </ind-def:sql511_test>
    <ind-def:sql511_test id="oval:oval.mitre.org.sql511:tst:5" version="1" check="all" check_existence="none_exist" comment="4.9: User hosts should not be wildcards">
      <ind-def:object object_ref="oval:oval.mitre.org.sql511:obj:5"/>
    </ind-def:sql511_test>
  </tests>
  <objects>
    <ind-def:sql511_object id="oval:oval.mitre.org.sql511:obj:1" comment="Get mysql version" version="1">
      <ind-def:engine>odbc</ind-def:engine>
      <ind-def:version>1.2.3</ind-def:version>
      <ind-def:connection_string>dsn=mysqltest</ind-def:connection_string>
      <ind-def:sql>show variables like 'version';</ind-def:sql>
    </ind-def:sql511_object>
    <ind-def:sql511_object id="oval:oval.mitre.org.sql511:obj:2" comment="Get 'test' database" version="1">
      <ind-def:engine>odbc</ind-def:engine>
      <ind-def:version>1.2.3</ind-def:version>
      <ind-def:connection_string>dsn=mysqltest</ind-def:connection_string>
      <ind-def:sql>show databases like 'test';</ind-def:sql>
    </ind-def:sql511_object>
    <ind-def:sql511_object id="oval:oval.mitre.org.sql511:obj:3" comment="Get 'root' user" version="1">
      <ind-def:engine>odbc</ind-def:engine>
      <ind-def:version>1.2.3</ind-def:version>
      <ind-def:connection_string>dsn=mysqltest</ind-def:connection_string>
      <ind-def:sql>select user from mysql.user where user = 'root' limit 1;</ind-def:sql>
    </ind-def:sql511_object>
    <ind-def:sql511_object id="oval:oval.mitre.org.sql511:obj:4" comment="Get password hashes that are too short" version="1">
      <ind-def:engine>odbc</ind-def:engine>
      <ind-def:version>1.2.3</ind-def:version>
      <ind-def:connection_string>dsn=mysqltest</ind-def:connection_string>
      <ind-def:sql>select password from mysql.user where length(password) &lt; 41 limit 1;</ind-def:sql>
    </ind-def:sql511_object>
    <ind-def:sql511_object id="oval:oval.mitre.org.sql511:obj:5" comment="Get users with wildcard hosts" version="1">
      <ind-def:engine>odbc</ind-def:engine>
      <ind-def:version>1.2.3</ind-def:version>
      <ind-def:connection_string>dsn=mysqltest</ind-def:connection_string>
      <ind-def:sql>select host from mysql.user where host = '%' limit 1;</ind-def:sql>
    </ind-def:sql511_object>
  </objects>
  <states>
    <ind-def:sql511_state id="oval:oval.mitre.org.sql511:ste:1" version="1" comment="version is >= 4.1">
      <ind-def:result datatype="record">
        <field name="variable_name">version</field>
        <field name="value" datatype="version" operation="greater than or equal">4.1</field>
      </ind-def:result>
    </ind-def:sql511_state>
  </states>
